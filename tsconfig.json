{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "incremental": true,
        "strict": false,
        "moduleResolution": "node",
        "allowJs": true,
        "typeRoots": ["node_modules/types", "types"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", ".git"]
}
